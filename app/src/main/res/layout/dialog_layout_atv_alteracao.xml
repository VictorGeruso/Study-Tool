<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:id="@+id/dialoglayout_atv_alterarAssuntoAtividade"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Assunto da atividade" />

    <EditText
        android:id="@+id/dialoglayout_atv_alterarNomeProfessor"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="Nome da materia" />

    <TextView
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:text="Data da atividade"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/dialoglayout_atv_alterarDataAtividade"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:hint="Data da atividade"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:inputType="date"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp">
        <Button
            android:id="@+id/dialoglayout_atv_btn_alterar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_cadastrar"
            android:textColor="@color/colorTextToolbar"
            android:text="Alterar"
            android:textAllCaps="false"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/dialoglayout_atv_btnAlterar_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_button_cadastrar"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="@color/colorTextToolbar"
            />

    </LinearLayout>

</LinearLayout>